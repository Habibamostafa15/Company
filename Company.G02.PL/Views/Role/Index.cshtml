@model IEnumerable<RoleToReturnDto>

@{
    ViewData["Title"] = "Index";
}

<h1>All Users</h1>



<form>
    <div class="container">
        <div class="row">
            <div class="col-6">
                <input id="SearchInput" placeholder="Search By Name" name="SearchInput" class="form-control" />
            </div>
            <div class="col-6">
                <input type="submit" class="btn btn-success" value="Search" />
            </div>
        </div>
    </div>
</form>
<a asp-action="Create"  class="btn btn-danger"> create Role</a>

<br />
<br />



@if (Model.Count() > 0)
{

    <table class="table table table-hover table-striped">

        <tr>
            <th>Id</th>
          
            <th>Name</th>
            <th>Details</th>
            <th>Update</th>
            <th>delete</th>

        </tr>    
        <tbody>
            @foreach(var item in Model)
            { <tr>
                 

                  <td>@item.Id</td>
                    <td>@item.Name</td>
                  
                  
                   

                    <partial name="_ButtonPartialView"  model="@item.Id.ToString()" />
                    




            </tr>
                
            }

     </tbody>
    

    </table>
}else
