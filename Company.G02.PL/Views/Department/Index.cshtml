@model IEnumerable<Department>

@{
    ViewData["Title"] = "Index";
}

<h1>All department</h1>

<br />
<br />
<a asp-action="Create" asp-controller="Department" class="btn btn-primary">createDepartment</a>
<br />
<br />

@if (Model.Count() > 0)
{

    <table class="table table table-hover table-striped">

        <tr>
            <th>Code</th>
            <th>Name</th>
            <th>Date Of Creation</th>
            <th>Details</th>
            <th>Update</th>
            <th>delete</th>
        </tr>    
        <tbody>
            @foreach(var item in Model)
            { <tr>
                <td>@item.code</td>
                  <td>@item.name</td>
                    <td>@item.createAt</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.id" class="btn btn-warning">details</a>
                    </td>
                    <td> <a asp-action="Update" class="btn btn-success">update</a>  </td>
                    <td> <a asp-action="Delete" class="btn btn-danger">delete</a>    </td>



                    




            </tr>
                
            }

     </tbody>
    

    </table>
}else
{ <dev class="mt-md-4 alert-warning alert-danger">

    <h4>There is No Department:(
    </h4>
</dev>

}


