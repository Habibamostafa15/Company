@model Company.DAL.Dtos.CreateDepartmentDto
@using Company.DAL.Dtos

@{
    ViewData["Title"] = "Delete Department";
}

<!-- Custom CSS -->
<style>
    /* General Styling */
    body {
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        background-color: #f8fafc;
    }

    .delete-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem 1rem;
    }

    .header-card {
        border: none;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
        background: linear-gradient(145deg, #ffffff, #f9fafb);
        overflow: hidden;
        margin-bottom: 1.5rem;
        transition: transform 0.3s ease;
    }

    .header-card:hover {
        transform: translateY(-5px);
    }

    .header-bg {
        background: linear-gradient(135deg, #3b82f6, #1e40af);
        padding: 1.5rem;
        text-align: center;
        color: #fff;
    }

    .header-title {
        font-size: 1.75rem;
        font-weight: 700;
        margin: 0;
    }

    .form-card {
        border: none;
        border-radius: 12px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
        background: #fff;
        padding: 1.5rem;
    }

    .form-card h5 {
        font-size: 1.25rem;
        font-weight: 600;
        color: #1f2937;
        margin-bottom: 1rem;
        border-bottom: 2px solid #e5e7eb;
        padding-bottom: 0.5rem;
    }

    .col-form-label {
        font-size: 0.9rem;
        font-weight: 500;
        color: #4b5563;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .form-control {
        border-radius: 8px;
        border: 1px solid #d1d5db;
        padding: 0.75rem;
        background-color: #f8fafc;
        color: #1f2937;
    }

    .form-control:disabled {
        opacity: 0.7;
        cursor: not-allowed;
    }

    .action-btn {
        background-color: #fff;
        border-radius: 8px;
        padding: 0.5rem 1.5rem;
        font-size: 0.9rem;
        font-weight: 500;
        transition: all 0.3s ease;
        margin: 0.5rem 0.25rem;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
    }

    .action-btn i {
        margin-right: 6px;
    }

    .btn-delete {
        border: 2px solid #dc3545;
        color: #dc3545;
    }

    .btn-delete:hover {
        background-color: #dc3545;
        color: #fff;
    }

    .btn-back {
        border: 2px solid #6b7280;
        color: #6b7280;
    }

    .btn-back:hover {
        background-color: #6b7280;
        color: #fff;
    }

    .alert-warning {
        border-radius: 8px;
        margin-bottom: 1rem;
    }

    @@media (max-width: 768px) {
        .header-title {
            font-size: 1.5rem;
        }

        .form-card {
            padding: 1rem;
        }

        .action-btn {
            width: 100%;
            justify-content: center;
        }
    }
</style>

<!-- Delete Container -->
<div class="delete-container">
    <!-- Header Card -->
    <div class="header-card">
        <div class="header-bg">
            <h1 class="header-title">Delete Department</h1>
        </div>
    </div>

    <!-- Form Card -->
    <div class="form-card">
        <h5>Department Details</h5>

        <!-- Warning Message -->
        <div class="alert alert-warning">
            <strong>Note:</strong> This department cannot be deleted if it has associated employees. Please reassign or remove employees first.
        </div>

        <form asp-action="Deletes">
            <!-- Hidden Field -->
            <input asp-for="Id" hidden />

            <!-- Partial View -->
            <partial name="DeparmentPartialVews/DeleteDerailsPartialView" model="Model" />

            <!-- Actions -->
            <div class="d-flex flex-wrap">
                <button type="submit" class="action-btn btn-delete">
                    <i class="bi bi-trash"></i> Delete
                </button>
                <a asp-controller="Department" asp-action="Index" class="action-btn btn-back">
                    <i class="bi bi-arrow-left"></i> Back to Departments
                </a>
            </div>
        </form>
    </div>
</div>