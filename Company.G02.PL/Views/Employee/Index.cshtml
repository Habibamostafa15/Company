       }

<form>
    <div class="container">
        <div class="row">
            <div class="col-6">
                <input id="SearchInput" placeholder="Search By Name" name="SearchInput" class="form-control" />
            </div>
            <div class="col-6">
                <input type="submit" class="btn btn-success" value="Search" />
            </div>
        </div>
    </div>
</form>


<br />
<br />
<a asp-action="Create" asp-controller="Employee" class="btn btn-primary">createEmployee</a>
<br />
<br />


@if (Model.Count() > 0)
{

    <table class="table table table-hover table-striped">

        <tr>
            <th>Name</th>
            <th>Age</th>
            <th>Email</th>
            <th>Address</th>
            <th>Phone</th>
            <th>Salary</th>
            <th>IsActive</th>
            <th>isDeleted</th>
            <th>@Html.DisplayNameFor(E=>E.HiringDate)</th>
            <th>@Html.DisplayNameFor(E => E.CreateAt)</th>
           
            <th>Details</th>
            <th>Update</th>
            <th>delete</th>

        </tr>    
        <tbody>
            @foreach(var item in Model)
            { <tr>
              
                  <td>@item.Name</td>
                    <td>@item.Age</td>
                    <td>@item.Email</td>
                    <td>@item.Address</td>
                    <td>@item.Phone</td>
                    <td>@item.Salary</td>
                    <td>@item.IsActive</td>
                    <td>@item.IsDeleted</td>
                    <td>@item.HiringDate</td>
                    <td>@item.CreateAt</td>
                   

                    <partial name="_ButtonPartialView"  model="@item.Id" />
                    




            </tr>
                
            }

     </tbody>
    

    </table>
}else
{ <dev class="mt-md-4 alert-warning alert-warning">

    <h4>There is No Employee:(
    </h4>
</dev>

}


