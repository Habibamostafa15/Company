@model CreateEmployeeDto
@using Company.DAL.Dtos

@{
    ViewData["Title"] = "Create Employee";
}

<!-- Custom CSS -->
<style>
    /* General Styling */
    body {
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        background-color: #f8fafc;
    }

    .create-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem 1rem;
    }

    /* Header Card */
    .header-card {
        border: none;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
        background: linear-gradient(145deg, #ffffff, #f9fafb);
        overflow: hidden;
        margin-bottom: 1.5rem;
        transition: transform 0.3s ease;
    }

    .header-card:hover {
        transform: translateY(-5px);
    }

    .header-bg {
        background: linear-gradient(135deg, #3b82f6, #1e40af);
        padding: 1.5rem;
        text-align: center;
        color: #fff;
    }

    .header-title {
        font-size: 1.75rem;
        font-weight: 700;
        margin: 0;
    }

    /* Form Card */
    .form-card {
        border: none;
        border-radius: 12px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
        background: #fff;
        padding: 1.5rem;
    }

    .form-card h5 {
        font-size: 1.25rem;
        font-weight: 600;
        color: #1f2937;
        margin-bottom: 1rem;
        border-bottom: 2px solid #e5e7eb;
        padding-bottom: 0.5rem;
    }

    /* Form Inputs (for partial) */
    .col-form-label {
        font-size: 0.9rem;
        font-weight: 500;
        color: #4b5563;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .form-control, .form-select {
        border-radius: 8px;
        border: 1px solid #d1d5db;
        padding: 0.75rem;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

    .form-control:focus, .form-select:focus {
        border-color: #3b82f6;
        box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
        outline: none;
    }

    .form-check {
        margin-top: 0.35rem;
    }

    .form-check + .col-form-label {
        display: inline-block;
        margin-left: 0.5rem;
    }

    /* Validation Errors */
    .text-danger {
        color: #ef4444;
        font-size: 0.85rem;
        margin-top: 0.25rem;
        display: block;
    }

    .form-control.input-validation-error,
    .form-select.input-validation-error {
        border-color: #ef4444 !important;
    }

    /* Action Buttons */
    .action-btn {
        background-color: #fff;
        border-radius: 8px;
        padding: 0.5rem 1.5rem;
        font-size: 0.9rem;
        font-weight: 500;
        transition: all 0.3s ease;
        margin: 0.5rem 0.25rem;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
    }

    .action-btn i {
        margin-right: 6px;
    }

    .btn-create {
        border: 2px solid #eab308;
        color: #eab308;
    }

    .btn-create:hover {
        background-color: #eab308;
        color: #fff;
    }

    .btn-back {
        border: 2px solid #6b7280;
        color: #6b7280;
    }

    .btn-back:hover {
        background-color: #6b7280;
        color: #fff;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .header-title {
            font-size: 1.5rem;
        }

        .form-card {
            padding: 1rem;
        }

        .action-btn {
            width: 100%;
            justify-content: center;
        }
    }
</style>

<!-- Create Container -->
<div class="create-container">
    <!-- Header Card -->
    <div class="header-card">
        <div class="header-bg">
            <h1 class="header-title">Create New Employee</h1>
        </div>
    </div>

    <!-- Form Card -->
    <div class="form-card">
        <h5>Employee Details</h5>
        <form asp-action="Create" enctype="multipart/form-data">
            <!-- Partial View for Form Fields -->
            <partial name="PartialViews/CreateEditPartialView" />

            <!-- Actions -->
            <div class="d-flex flex-wrap my-3">
                <button type="submit" class="action-btn btn-create" value="Create">
                    <i class="bi bi-plus-circle"></i> Create
                </button>
                <a asp-controller="Employee" asp-action="Index" class="action-btn btn-back">
                    <i class="bi bi-arrow-left"></i> Back to Employees
                </a>
            </div>
        </form>
    </div>
</div>

@section validation {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}