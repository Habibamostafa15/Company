<!DOCTYPE html>
<html>
<head>
    <title>Creative Colorlib @ViewData["Title"] Form</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <script type="application/x-javascript">
        addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false);
        function hideURLbar(){ window.scrollTo(0,1); }
    </script>
    <!-- Custom Theme files -->
    <link href="~/css/_AuthStyle.css" rel="stylesheet" type="text/css" media="all" />
    <!-- //Custom Theme files -->
    <!-- web font -->
    <link href="//fonts.googleapis.com/css?family=Roboto:300,300i,400,400i,700,700i" rel="stylesheet">
    <!-- //web font -->
    <style>
        body {
            background-color: black;
            margin: 0; /* Ensures no default margins interfere */
            padding: 0;
        }

        .main-w3layouts {
            color: white; /* Text inside the main wrapper becomes white */
        }

        input[type="text"], input[type="password"], textarea {
            background-color: #333; /* Dark gray background for inputs */
            color: white; /* White text inside inputs */
            border: 1px solid #555; /* Slightly lighter border for contrast */
            padding: 5px; /* Improved usability */
        }

        button, input[type="submit"] {
            background-color: #555; /* Medium gray for buttons */
            color: white;
            border: none;
            padding: 8px 15px; /* Better click area */
            cursor: pointer; /* Indicates clickability */
        }

        .colorlibcopy-agile {
            color: white; /* Copyright text in white */
        }

        .colorlib-bubbles li {
            background-color: #555; /* Dark gray bubbles to fit the theme */
        }

        input::placeholder, textarea::placeholder {
            color: #aaa; /* Light gray placeholders for visibility */
        }

        a {
            color: #ccc; /* Light gray links */
            text-decoration: none; /* Optional: removes underline */
        }

            a:hover {
                color: white; /* White on hover for feedback */
            }
    </style>
</head>
<body>
    <!-- main -->
    <div class="main-w3layouts wrapper">
        <h1>Creative @ViewData["Title"] Form</h1>
        @RenderBody()
    </div>
    <!-- copyright -->
    <div class="colorlibcopy-agile">
        <p>© 2018 Colorlib @ViewData["Title"] Form. All rights reserved | Design by <a href="https://colorlib.com/" target="_blank">Colorlib</a></p>
    </div>
    <!-- //copyright -->
    <ul class="colorlib-bubbles">
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
    </ul>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @await RenderSectionAsync("ValidationSection", required: false)
</body>
</html>