@model SignUpDto

@{
    ViewData["Title"] = "Sign Up";
    Layout = null; // Standalone page without a shared layout
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Securely sign up for a new StatusFlow account." />
    <meta name="keywords" content="signup, register, StatusFlow" />
    <meta name="author" content="StatusFlow" />
    <title>@ViewData["Title"] | StatusFlow</title>

    <!-- External Stylesheets -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
          integrity="sha512-Avb2QiuDEEvB4bZJYdft2mNjVShBftLdPG8B0jP4qV5kB2bB5fA1eA8B4B6gB8"
          crossorigin="anonymous"
          referrerpolicy="no-referrer" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap"
          rel="stylesheet" />

    <style>
        :root {
            --primary: #1e40af;
            --primary-hover: #1e3a8a;
            --text: #111827;
            --background: #f1f5f9;
            --white: #ffffff;
            --border: #d1d5db;
            --shadow: rgba(0, 0, 0, 0.05);
            --error: #dc2626;
            --divider: #e5e7eb;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Roboto', sans-serif;
        }

        body {
            background: var(--background);
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 2rem;
            animation: fadeIn 1s ease-out;
        }

        .container {
            max-width: 960px;
            width: 100%;
            background: var(--white);
            border-radius: 16px;
            box-shadow: 0 8px 16px var(--shadow);
            padding: 3rem;
            animation: slideIn 0.5s ease-in-out;
        }

        .signup-form {
            width: 100%;
        }

        .logo-container {
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 2rem;
        }

        .logo {
            width: 180px;
            height: 180px;
            object-fit: cover;
            border-radius: 50%;
            border: 5px solid var(--primary);
            margin-right: 10px;
        }

        .logo-text {
            font-size: 2.5rem;
            font-weight: 700;
            color: var(--primary);
        }

        .form-header {
            text-align: center;
            margin-bottom: 2.5rem;
        }

            .form-header h1 {
                font-size: 2rem;
                font-weight: 700;
                color: var(--text);
            }

            .form-header p {
                color: #6b7280;
                font-size: 1rem;
                margin-top: 0.75rem;
            }

        .form-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 2rem;
        }

        .input-stack {
            display: flex;
            flex-direction: column;
            gap: 1.25rem;
            width: 100%;
            max-width: 400px;
        }

        .form-group {
            position: relative;
        }

        label {
            font-size: 0.95rem;
            font-weight: 500;
            color: var(--text);
            margin-bottom: 0.5rem;
            display: block;
        }

        .input-field {
            width: 100%;
            padding: 0.75rem 0.75rem 0.75rem 2.5rem;
            border: 1px solid var(--border);
            border-radius: 8px;
            font-size: 1rem;
            transition: all 0.3s ease;
        }

            .input-field:focus {
                outline: none;
                border-color: var(--primary);
                box-shadow: 0 0 0 4px rgba(30, 64, 175, 0.15);
            }

        .form-icon {
            position: absolute;
            top: 2.25rem;
            left: 0.75rem;
            color: #9ca3af;
            font-size: 1rem;
        }

        .submit-btn {
            padding: 0.75rem;
            background: var(--primary);
            color: var(--white);
            border: none;
            border-radius: 8px;
            font-size: 1rem;
            font-weight: 500;
            cursor: pointer;
            transition: background 0.3s ease, transform 0.2s ease;
            width: 100%;
            max-width: 400px;
        }

            .submit-btn:hover {
                background: var(--primary-hover);
                transform: translateY(-2px);
            }

        .social-btn {
            padding: 0.75rem;
            border: 1px solid var(--border);
            border-radius: 8px;
            font-size: 1rem;
            text-align: center;
            text-decoration: none;
            color: var(--text);
            display: block;
            width: 48%;
            margin: 0 1%;
            box-sizing: border-box;
            transition: background 0.3s ease;
            text-align: center;
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 0.5rem;
        }

        .google-btn:hover {
            background: #f1f5f9;
        }

        .facebook-btn:hover {
            background: #f1f5f9;
        }

        .flex-row {
            display: flex;
            justify-content: center;
            gap: 0.5rem;
            font-size: 0.9rem;
            margin-top: 0.5rem; /* Reduced the space between buttons */
            width: 100%;
        }

        .signup-link {
            text-align: center;
            margin-top: 2rem;
            font-size: 0.95rem;
            color: #6b7280;
        }

            .signup-link a {
                color: var(--primary);
                font-weight: 500;
                text-decoration: none;
            }

                .signup-link a:hover {
                    color: var(--primary-hover);
                    text-decoration: underline;
                }

        .text-danger {
            color: var(--error);
            font-size: 0.875rem;
            margin-top: 0.25rem;
            display: block;
        }
    </style>
</head>
<body>
    <div class="container">
        <section class="signup-form" aria-labelledby="form-title">
            <div class="logo-container">
                <img src="~/images/logo.jpg" alt="StatusFlow Logo" class="logo" loading="lazy" />
                <span class="logo-text">StatusFlow</span>
            </div>

            <header class="form-header">
                <h1 id="form-title">Create Account</h1>
                <p>Sign up to get started with StatusFlow</p>
            </header>

            <form asp-action="SignUp" method="post" role="form" aria-label="Sign Up Form">
                <div class="form-container">
                    <div class="input-stack">
                        <div class="form-group">
                            <label asp-for="UserName">Username</label>
                            <input asp-for="UserName"
                                   class="input-field"
                                   type="text"
                                   placeholder="Enter your username"
                                   required
                                   aria-required="true" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="FirstName">First Name</label>
                            <input asp-for="FirstName"
                                   class="input-field"
                                   type="text"
                                   placeholder="Enter your first name"
                                   required
                                   aria-required="true" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="LastName">Last Name</label>
                            <input asp-for="LastName"
                                   class="input-field"
                                   type="text"
                                   placeholder="Enter your last name"
                                   required
                                   aria-required="true" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Email">Email</label>
                            <input asp-for="Email"
                                   class="input-field"
                                   type="email"
                                   placeholder="name@statusflow.com"
                                   required
                                   aria-required="true" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Password">Password</label>
                            <input asp-for="Password"
                                   class="input-field"
                                   type="password"
                                   placeholder="••••••••"
                                   required
                                   aria-required="true" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="ConfirmPassword">Confirm Password</label>
                            <input asp-for="ConfirmPassword"
                                   class="input-field"
                                   type="password"
                                   placeholder="••••••••"
                                   required
                                   aria-required="true" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <button type="submit" class="submit-btn" aria-label="Sign Up">Sign Up</button>

                        <div class="flex-row">
                            <a href="#" class="social-btn google-btn">
                                <img src="https://www.svgrepo.com/show/303108/google-icon-logo.svg" alt="Google Logo" style="width: 20px; height: 20px;">
                                Google
                            </a>
                            <a href="#" class="social-btn facebook-btn">
                                <img src="https://upload.wikimedia.org/wikipedia/commons/5/51/Facebook_f_logo_%282019%29.svg" alt="Facebook Logo" style="width: 20px; height: 20px;">
                                Facebook
                            </a>
                        </div>

                        <p class="signup-link">
                            Already have an account? <a asp-action="SignIn" aria-label="Sign In">Sign in</a>
                        </p>
                    </div>
                </div>
            </form>
        </section>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const form = document.querySelector('form');
            const submitBtn = form.querySelector('.submit-btn');

            form.addEventListener('submit', (e) => {
                submitBtn.disabled = true;
                submitBtn.textContent = 'Signing Up...';
            });
        });
    </script>
</body>
</html>
